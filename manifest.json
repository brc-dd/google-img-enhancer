{
  "manifest_version": 3,
  "name": "Google Images Enhancer",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage", "declarativeNetRequest"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Enable HD Images"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "ruleset.json"
      }
    ]
  }
}
